@using InternetShop.Domain.Enum
@using System.ComponentModel.DataAnnotations;
@model InternetShop.Domain.ViewModels.Clothes.ClothesViewModel
@{
    var textTitle = "";
    if (Model == null || Model.Id == 0 ) textTitle = "Добавление данных";
    else textTitle = "Изменение данных";

}
<span>  </span>
<label>   </label>
<div class="card">
<form asp-controller="Clothes" asp-action="Save" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
    <div class="row">
            <h3 class="text-center">@textTitle</h3>
        <div class="form-group col-md-4">
            <label asp-for="Name" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="Name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="ImageUrl" class="col-form-label"></label>
                <input asp-for="ImageUrl" class="form-control" type="text" required />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Price" class="col-form-label"></label>
                <input type="number" class="form-control" asp-for="Price" min="1" max="100000000" required />
                <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="Description" class="col-form-label"></label>
            <textarea type="text" class="form-control" asp-for="Description" required maxlength="200"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Color" class="col-form-label"></label>
                <div>
                    <select asp-for="Color" required class="form-control" asp-items="Html.GetEnumSelectList<Color>()">
                        <option value="">Выберите цвет одежды</option>
                    </select>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Gender" class="col-form-label"></label>
                <div>
                    <select asp-for="Gender" required class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                        <option value="">Выберите пол</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Size" class="col-form-label"></label>
                <div>
                    <select asp-for="Size" required class="form-control" asp-items="Html.GetEnumSelectList<Size>()">
                        <option value="">Выберите размер одежды</option>
                    </select>
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="СlothingType" class="col-form-label"></label>
                <div>
                    <select asp-for="СlothingType" required class="form-control" asp-items="Html.GetEnumSelectList<СlothingType>()">
                        <option value="">Выберите тип одежды</option>
                    </select>
                    <span asp-validation-for="СlothingType" class="text-danger"></span>
                </div>
            </div>
       
            <div class="form-group col-md-6">
                <label> </label>
                
            </div>
            
        <button class="btn btn-primary btn-lg float-right" type="submit">Отправить</button>
    
    </div>
</form>
</div>

<style>
    label {
        color: black;
    }
</style>